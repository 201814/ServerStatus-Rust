[Unit]
Description=Server Status Server
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/opt/ServerStatus
ExecStart=/opt/ServerStatus/stat_client -a "tcp://127.0.0.1:34512" -u h1 -p p1
ExecReload=/bin/kill -HUP $MAINPID
Restart=on-failure

[Install]
WantedBy=multi-user.target

